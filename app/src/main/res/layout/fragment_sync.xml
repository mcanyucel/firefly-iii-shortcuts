<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.mustafacanyucel.fireflyiiishortcuts.data.entity.AccountEntity" />

        <import type="com.mustafacanyucel.fireflyiiishortcuts.ui.sync.SyncStep" />

        <import type="kotlin.reflect.KClass" />

        <variable
            name="viewModel"
            type="com.mustafacanyucel.fireflyiiishortcuts.ui.sync.SyncViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:context=".ui.sync.SyncFragment">

            <!-- Header -->
            <TextView
                android:id="@+id/title_sync"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sync_title"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textColor="?attr/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Sync Data" />

            <TextView
                android:id="@+id/description_sync"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/sync_information_long"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_sync"
                tools:text="Synchronize your local data with the remote Firefly III server." />

            <!-- Progress Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description_sync">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/icon_status"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/sync_status_icon"
                        android:visibility="@{viewModel.syncProgress.step == SyncStep.IDLE || viewModel.syncProgress.step == SyncStep.FETCHING_REMOTE || viewModel.syncProgress.step == SyncStep.FETCHING_LOCAL || viewModel.syncProgress.step == SyncStep.COMPARING_DATA || viewModel.syncProgress.step == SyncStep.APPLYING_CHANGES ? View.VISIBLE : View.GONE}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/baseline_sync_24" />

                    <ImageView
                        android:id="@+id/icon_completed"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/sync_status_completed"
                        android:visibility="@{viewModel.syncProgress.step == SyncStep.COMPLETED ? View.VISIBLE : View.GONE}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/baseline_check_circle_24" />

                    <ImageView
                        android:id="@+id/icon_error"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/sync_status_error"
                        android:visibility="@{viewModel.syncProgress.step == SyncStep.ERROR ? View.VISIBLE : View.GONE}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/baseline_close_24" />

                    <TextView
                        android:id="@+id/text_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@{viewModel.syncProgress.message}"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/icon_status"
                        app:layout_constraintTop_toTopOf="@id/icon_status"
                        tools:text="Fetching remote data" />

                    <TextView
                        android:id="@+id/text_error_details"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@{viewModel.syncProgress.errorDetails}"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="?attr/colorError"
                        android:visibility="@{viewModel.syncProgress.errorDetails != null ? View.VISIBLE : View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/text_status"
                        app:layout_constraintTop_toBottomOf="@id/text_status"
                        tools:text="Failed to connect to server" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_sync"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:indeterminate="@{viewModel.progressPercentage == 0 ? true : false}"
                        android:max="100"
                        android:progress="@{viewModel.progressPercentage}"
                        android:visibility="@{viewModel.syncProgress.step != SyncStep.IDLE ? View.VISIBLE : View.GONE}"
                        app:indicatorColor="?attr/colorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_error_details" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

