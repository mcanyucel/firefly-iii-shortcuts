                                android:text="@string/deleted"
                                android:textAppearance="?attr/textAppearanceCaption" />

                            <TextView
                                android:id="@+id/text_piggybanks_deleted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
