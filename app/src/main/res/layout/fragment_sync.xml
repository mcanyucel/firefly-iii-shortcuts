                                app:entityClassForUnchanged="@{`com.mustafacanyucel.fireflyiiishortcuts.data.entity.PiggybankEntity`}"
                                app:syncResult="@{viewModel.syncResult}"
                                tools:text="1" />
                        </LinearLayout>

                        <!-- Tags Section -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/tags"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/added"
                                android:textAppearance="?attr/textAppearanceCaption" />

                            <TextView
                                android:id="@+id/text_tags_added"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceCaption"
                                app:entityClassForAdded="@{`com.mustafacanyucel.fireflyiiishortcuts.data.entity.TagEntity`}"
                                app:syncResult="@{viewModel.syncResult}"
                                tools:text="3" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/updated"
                                android:textAppearance="?attr/textAppearanceCaption" />

                            <TextView
                                android:id="@+id/text_tags_updated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceCaption"
                                app:entityClassForUpdated="@{`com.mustafacanyucel.fireflyiiishortcuts.data.entity.TagEntity`}"
                                app:syncResult="@{viewModel.syncResult}"
                                tools:text="2" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/deleted"
                                android:textAppearance="?attr/textAppearanceCaption" />

                            <TextView
                                android:id="@+id/text_tags_deleted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceCaption"
                                app:entityClassForDeleted="@{`com.mustafacanyucel.fireflyiiishortcuts.data.entity.TagEntity`}"
