                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/unchanged"
                                android:textAppearance="?attr/textAppearanceCaption" />

                            <TextView
                                android:id="@+id/text_tags_unchanged"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceCaption"
                                app:entityClassForUnchanged="@{`com.mustafacanyucel.fireflyiiishortcuts.data.entity.TagEntity`}"
                                app:syncResult="@{viewModel.syncResult}"
                                tools:text="1" />
                        </LinearLayout>

                        <!-- Shortcuts Section -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/shortcuts"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/deleted"
                                android:textAppearance="?attr/textAppearanceCaption" />

                            <TextView
                                android:id="@+id/text_shortcuts_deleted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.syncResult.totalDeletedShortcuts()}"
                                android:textAppearance="?attr/textAppearanceCaption"
                                tools:text="1" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sync"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:onClick="@{() -> viewModel.startSync()}"
                android:text="@string/start_sync"
                android:visibility="@{viewModel.syncProgress.step == SyncStep.IDLE || viewModel.syncProgress.step == SyncStep.COMPLETED || viewModel.syncProgress.step == SyncStep.ERROR ? View.VISIBLE : View.GONE}"
                app:cornerRadius="8dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_results" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
