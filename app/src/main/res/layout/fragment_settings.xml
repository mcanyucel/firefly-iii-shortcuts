<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.mustafacanyucel.fireflyiiishortcuts.ui.settings.SettingsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">


            <TextView
                android:id="@+id/server_settings_header_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/server"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/server_url_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:hint="@string/server_url"
                app:layout_constraintTop_toBottomOf="@id/server_settings_header_textview">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/server_url_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:afterTextChanged="@{(editable) -> viewModel.setServerUrl(editable.toString())}"
                    android:inputType="textUri"
                    android:text="@{viewModel.serverUrl}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/client_id_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:hint="@string/client_id"
                app:layout_constraintTop_toBottomOf="@id/server_url_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/client_id_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:afterTextChanged="@{(editable) -> viewModel.setClientId(editable.toString())}"
                    android:inputType="text"
                    android:text="@{viewModel.clientId}" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/registered_return_url_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:hint="@string/registered_redirect_url"
                app:layout_constraintTop_toBottomOf="@id/client_id_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/registered_return_url_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:afterTextChanged="@{(editable) -> viewModel.setRegisteredRedirectUrl(editable.toString())}"
                    android:inputType="text"
                    android:text="@{viewModel.registeredRedirectUrl}" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/registered_return_url_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/registered_return_url_info"
                android:textColor="@color/material_gray_600"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/registered_return_url_layout" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="@{!viewModel.isBusy()}"
                android:onClick="@{() -> viewModel.saveServerSettings()}"
                android:text="@string/save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/registered_return_url_info" />

            <View
                android:id="@+id/divider_authorization"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@id/save_button" />

            <TextView
                android:id="@+id/authorization_header_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/authorization"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/divider_authorization" />

            <TextView
                android:id="@+id/authorization_status_label_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                app:layout_constraintEnd_toStartOf="@+id/authorization_status_textview"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/authorization_header_textview" />

            <TextView
                android:id="@+id/authorization_status_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{viewModel.isAuthorized()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/authorization_status_label_textview"
                app:layout_constraintTop_toBottomOf="@id/authorization_header_textview" />

            <Button
                android:id="@+id/authorize_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="@{!viewModel.isBusy()}"
                android:text="@string/authorize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/authorization_status_textview" />

            <View
                android:id="@+id/divider_sync"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@id/authorize_button" />

            <TextView
                android:id="@+id/sync_header_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/synchronize_server_data"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/divider_sync" />

            <TextView
                android:id="@+id/sync_server_status_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.statusText}"
                app:layout_constraintTop_toBottomOf="@id/sync_header_textview" />

            <Button
                android:id="@+id/sync_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="@{!viewModel.isBusy()}"
                android:text="@string/start"
                app:layout_constraintEnd_toEndOf="parent"
                android:onClick="@{() -> viewModel.loadAccounts()}"
                app:layout_constraintTop_toBottomOf="@id/sync_server_status_textview" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>